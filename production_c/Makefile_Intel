CC=	mpiicc

IFLAGS=	-I../INCLUDE 

CFLAGS=     $(IFLAGS) -qmkl -std=gnu11 -ipo -qopt-zmm-usage=high -MD\
			-xHASWELL -axSKYLAKE-AVX512,CASCADELAKE,TIGERLAKE,SKYLAKE,COFFEELAKE,ALDERLAKE\
			-static-intel -static-libgcc -DMKL_DIRECT_CALL -D__INTEL_MKL__ -D__RANLUX__\
			-qopenmp -qno-openmp-offload -qopenmp-simd -DSA3AT \

LFLAGS=	-L${MKLROOT}/lib/intel64 -limf -Bstatic -lgsl

EXE=	su2hmc_INTEL

SRC= \
	coord.c \
	random.c \
	matrices.c \
	congrad.c \
	bosonic.c\
	fermionic.c\
	force.c\
	par_mpi.c \
	su2hmc.c \

INC= \
	sizes.h \
	errorcodes.h \
	coord.h \
	random.h \
	matrices.h \
	par_mpi.h \
	su2hmc.h \
#
# No need to edit below this line
#
.SUFFIXES: .c .o
.PHONY: clean debug release profiler tar

OBJ=	$(SRC:.c=.o)
DEPS=	$(OBJ:.o=.d_icc)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

-include $(DEPS)
all:	$(EXE)

profiler:	CFLAGS += -g -D_DEBUG
profiler:	release

release:	CFLAGS +=  -O3  -inline-level=2\
						-DMKL_ILP64  -I"${MKLROOT}/include" #-DUSE_RAN2
release:	$(EXE)

debug:	CFLAGS += -g -O0 \
		-D_DEBUG #-DDIAGNOSTIC #-DNO_TIME -DNO_SPACE
debug:	$(EXE)

$(EXE):	$(OBJ)
		$(CC) ../main.c -MMD -MP $(CFLAGS) -o $@ $(OBJ) $(LFLAGS)  

clean:
		rm -f $(OBJ) $(TMP) $(DEPS)

INP=	\
		midout

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE) $(DEPS)
