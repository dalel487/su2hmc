MF=	Makefile

CC=mpicc -cc=clang

IFLAGS=     -I../INCLUDE/ -I /opt/AMD/aocl/aocl-linux-aocc-3.0-6/include/ 

CFLAGS=    $(IFLAGS) -std=gnu11 -DUSE_BLAS -fcommon	 -march=native -DUSE_RAN2 -static-libgcc \
		 -fopenmp-simd -fopenmp=libiomp5  -Xopenmp-target=amdgcn -march=gfx902\
		 -mcpu=gfx902:xnack+ -DSA3AT -fveclib=AMDLIBM\
		 -fuse-ld=lld -fremap-arrays #-fprofile-instr-use=./default.profraw

LFLAGS=	-L /opt/AMD/aocl/aocl-linux-aocc-3.0-6/lib/	-L /usr/lib/llvm-12/lib/ -Wl -latomic \
		-liomp5 -lpthread -lm -ldl -lalm -lblis

EXE=	su2hmc_AMD

SRC= \
	su2hmc.c \
	force.c\
	bosonic.c\
	fermionic.c\
	par_mpi.c \
	coord.c \
	random.c \
	matrices.c \

INC= \
	su2hmc.h \
	sizes.h \
	par_mpi.h \
    random.h \
    matrices.h \
    coord.h \
    errorcodes.h \

#
# No need to edit below this line
#

.SUFFIXES: .c .o
.PHONY: clean debug release profiler tar

OBJ=	$(SRC:.c=.o)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

all:	$(EXE)

profiler:	CFLAGS += -g

profiler:	release

release:	CFLAGS +=  -Ofast -finline-aggressive -finline-recursion=4\
				-funroll-loops -flto=full 
release:	$(EXE)

debug:	CFLAGS += -g -O0  \
		-D_DEBUG #-DDIAGNOSTIC -DNO_TIME -DNO_SPACE

debug:	$(EXE)

$(EXE):	$(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(LFLAGS) $^

$(OBJ):	$(MF) 

clean:
	rm -f $(OBJ) $(TMP)

INP=	\
	midout \
	con

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE)
