MF=	Makefile

CC=mpicc -cc=clang

IFLAGS=     -I../INCLUDE/ -I /opt/AMD/aocl/aocl-linux-aocc-3.0-6/include/ 

CFLAGS=    $(IFLAGS) -std=gnu11 -DUSE_BLAS -fcommon\
		 -march=znver2 -DUSE_RAN2 -static-libgcc -static\
		 -fopenmp-simd -fopenmp=libgomp -DSA3AT -fveclib=AMDLIBM\
		 -fuse-ld=lld -flto=full -g

LFLAGS=	-L /opt/AMD/aocl/aocl-linux-aocc-3.0-6/lib/\
		-L	/usr/lib/llvm-12/lib -Wl -latomic \
		-lgomp -lpthread -lm -ldl -lalm -lblis\

EXE=	su2hmc_AMD

SRC= \
	su2hmc.c \
	force.c\
	bosonic.c\
	fermionic.c\
	par_mpi.c \
      coord.c \
      random.c \
      matrices.c \

INC= \
	su2hmc.h \
	sizes.h \
      par_mpi.h \
      slash.h \
      random.h \
      matrices.h \
      coord.h \
      errorcodes.h \

#
# No need to edit below this line
#

.SUFFIXES: .c .o
.PHONY: clean debug release advisor tar

OBJ=	$(SRC:.c=.o)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

all:	$(EXE)

release:	CFLAGS +=  -Ofast -finline-aggressive -finline-recursion=4\
				-funroll-loops
release:	$(EXE)

debug:	CFLAGS += -g -O0  \
		-D_DEBUG #-DDIAGNOSTIC -DNO_TIME -DNO_SPACE

debug:	$(EXE)

$(EXE):	$(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(LFLAGS)

$(OBJ):	$(MF) 

clean:
	rm -f $(OBJ) $(TMP)

INP=	\
	midout \
	con

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE)
