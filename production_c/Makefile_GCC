MF=	Makefile

CC=mpicc 

IFLAGS=  -I ../INCLUDE/ -I /opt/AMD/aocl/aocl-linux-aocc-3.1.0/include/

CFLAGS=	$(IFLAGS) -std=gnu11 -DUSE_BLAS -fcommon\
		-march=znver1 -mtune=znver3 -static -D__RANLUX__\
		-fopenmp-simd -DSA3AT -flto\
		-foffload=amdgcn-amdhsa="-march=gfx900" -fopenacc\
#		-pg -fprofile-arcs-foffload=amdgcn-amdhsa="-march=gfx90c"

LFLAGS=	-L /opt/AMD/aocl/aocl-linux-aocc-3.1.0/lib/ -latomic \
		-lm -ldl -lalm -lblis -lgsl 

EXE=	su2hmc_GCC

SRC= \
	su2hmc.c \
	force.c\
	bosonic.c\
	fermionic.c\
	par_mpi.c \
	congrad.c \
    coord.c \
    random.c \
    matrices.c \

INC= \
	su2hmc.h \
	sizes.h \
    par_mpi.h \
    slash.h \
    random.h \
    matrices.h \
    coord.h \
    errorcodes.h \

#
# No need to edit below this line
#

.SUFFIXES: .c .o
.PHONY: clean debug release advisor tar

OBJ=	$(SRC:.c=.o)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

all:	$(EXE)

profiler:	CFLAGS += -g -D_DEBUG #-fprofile-generate
profiler:	release

release:	CFLAGS +=  -Ofast -funroll-all-loops -fcf-protection=none
release:	$(EXE)

debug:	CFLAGS += -g -O0  \
		-D_DEBUG #-DDIAGNOSTIC -DNO_TIME -DNO_SPACE
debug:	$(EXE)

$(EXE):	$(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(LFLAGS)

$(OBJ):	$(MF) 

clean:
	rm -f $(OBJ) $(TMP)

INP=	\
	midout \
	con

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE)
