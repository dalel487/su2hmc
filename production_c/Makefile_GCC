CC=mpicc

IFLAGS=     -I../INCLUDE/ -I ${AOCL_ROOT}/include

CFLAGS=	$(IFLAGS) -std=gnu11 -DAMD_BLAS -fcommon\
		-march=znver1 -mtune=znver2 -static -D__RANLUX__\
		-fopenmp -fopenmp-simd -DSA3AT -flto -static\
#		-foffload=amdgcn-amdhsa="-march=gfx902" #-fopenacc\
#		-pg -fprofile-arcs-foffload=amdgcn-amdhsa="-march=gfx90c"

LFLAGS=	-L /${AOCL_ROOT}/lib/ -latomic \
		-lm -ldl -lalm -lblis -lgsl 

EXE=	su2hmc_GCC

SRC= \
	coord.c \
	random.c \
	matrices.c \
	congrad.c \
	bosonic.c\
	fermionic.c\
	force.c\
	par_mpi.c \
	su2hmc.c \

INC= \
	sizes.h \
	errorcodes.h \
	coord.h \
	random.h \
	matrices.h \
	par_mpi.h \
	su2hmc.h \
#
# No need to edit below this line
#
.SUFFIXES: .c .o
.PHONY: clean debug release advisor tar

OBJ=	$(SRC:.c=.o)
DEPS=	$(OBJ:.o=.d)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

-include $(DEPS)
all:	$(EXE)

profiler:	CFLAGS += -g -D_DEBUG #-fprofile-generate
profiler:	release

release:	CFLAGS +=  -Ofast -funroll-all-loops -fcf-protection=none
release:	$(EXE)

debug:	CFLAGS += -g -O0  \
		-D_DEBUG #-DDIAGNOSTIC -DNO_TIME -DNO_SPACE
debug:	$(EXE)

$(EXE):	$(OBJ)
		$(CC) -MMD -MP $(CFLAGS) -o $@ $(OBJ) $(LFLAGS)  

$(OBJ):	$(MF) 

clean:
		rm -f $(OBJ) $(TMP) $(DEPS)

INP=	\
	midout \

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE) $(DEPS)
