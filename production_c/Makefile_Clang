MF=	Makefile

CC= mpiicc

IFLAGS=     -I../INCLUDE 

CFLAGS=		$(IFLAGS) -cc=icx -qmkl -std=c11 -ipo -qopt-zmm-usage=high \
			-xHOST -static-intel -static-libgcc -DMKL_DIRECT_CALL -D__INTEL_MKL__\
			-qopenmp-simd -fiopenmp  -qopenmp-link=static -DSA3AT -fcommon\
			 -fopenmp-targets=spir64 \

LFLAGS=		-L${MKLROOT}/lib/intel64 -lmkl_intel_ilp64 -lmkl_intel_thread -lmkl_core -lmkl_blacs_intelmpi_ilp64\
			-liomp5 -lpthread -ldl

EXE=		su2hmc_Clang

SRC= \
	su2hmc.c \
	force.c\
	bosonic.c\
	fermionic.c\
	par_mpi.c \
    coord.c \
    random.c \
    matrices.c \

INC= \
	su2hmc.h \
	sizes.h \
    par_mpi.h \
    random.h \
    matrices.h \
    coord.h \
    errorcodes.h \

#
# No need to edit below this line
#

.SUFFIXES: .c .o
.PHONY: clean debug release profiler tar

OBJ=	$(SRC:.c=.o)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

all:	$(EXE)

profiler:	CFLAGS += -g -D_DEBUG #-DNO_GAUGE -DNO_SPACE -DNO_TIME\
								#-DUSE_RAN2 -DDIAGNOSTIC

profiler:	release

release:	CFLAGS +=  -O3  -inline-level=2\
						-DMKL_ILP64  -I"${MKLROOT}/include"# -DUSE_RAN2
release:	$(EXE)

debug:	CFLAGS +=	-g -O0 \
					-D_DEBUG #-DUSE_RAN2 -DDIAGNOSTIC
debug:	$(EXE)

$(EXE):	$(OBJ)
	$(CC) $(CFLAGS) -o $@ $(LFLAGS) $^ 

$(OBJ):	$(MF) 

clean:
	rm -f $(OBJ) $(TMP)

INP=	\
	midout \
	con

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE)
