MF=	Makefile_OneAPI
CC=	mpiicx

IFLAGS=	-I../INCLUDE $(shell gsl-config --cflags)

CFLAGS=     $(IFLAGS) -qmkl -std=gnu11 -ipo -qopt-zmm-usage=high -MD\
			-xHOST -DMKL_DIRECT_CALL -D__INTEL_MKL__ -D__RANLUX__\
			-qopenmp -qopenmp-simd -DSA3AT -DINT_OMF2\
			-mllvm -loopopt=0
			#Last Line required to avoid segmentation fault
			
LFLAGS=	-L${MKLROOT}/lib/intel64 -limf $(shell gsl-config --libs-without-cblas)

EXE=	su2hmc_OneAPI

SRC= \
	coord.c \
	random.c \
	matrices.c \
	congrad.c \
	bosonic.c\
	fermionic.c\
	force.c\
	par_mpi.c \
	clover.c \
	integrate.c\
	su2hmc.c 

INC= \
	sizes.h \
	errorcodes.h \
	coord.h \
	random.h \
	matrices.h \
	par_mpi.h \
	clover.h \
	integrate.h\
	su2hmc.h \
#
# No need to edit below this line
#
.SUFFIXES: .c .o
.PHONY: clean debug release profiler tar

OBJ=	$(SRC:.c=.o)
DEPS=	$(OBJ:.o=.d_icc)
EDT=	$(SRC:.c=.c~)
TMP=	$(MOD) $(EDT) core

-include $(DEPS)
all:	$(EXE)

profiler:	CFLAGS += -g #-D_DEBUGCG
profiler:	release

release:	CFLAGS +=  -O3  -inline-level=2\
						-DMKL_ILP64  -I"${MKLROOT}/include" #-DUSE_RAN2
release:	$(EXE)

diagnostic: CFLAGS+=-DDIAGNOSTIC #-DNO_TIME -DNO_SPACE
diagnostic: debug

debug:	CFLAGS += -g -O0 -D_DEBUG -D_DEBUGCG -Wall #-fsanitize=memory -fno-omit-frame-pointer
debug:	$(EXE)

$(EXE):	$(OBJ)
		$(CC) ../main.c -MMD -MP $(CFLAGS) -o $@ $(OBJ) $(LFLAGS)  

clean:
		rm -f $(OBJ) $(TMP) $(DEPS)

INP=	\
		midout

tar:
	tar cvfz $(EXE).tar $(MF) $(SRC) $(INC) $(INP) $(EXE) $(DEPS)
